# Bot Chain Environment Variables

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id-here
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=30

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-supabase-service-key-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database Configuration
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ceci_bot_chain

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Bot Chain Configuration
BOT_CHAIN_PORT=8002
BOT_CHAIN_TIMEOUT=120
BOT_CHAIN_MAX_RETRIES=3

# Individual Bot Ports (for development)
0_MAIN_REWRITE_BOT_PORT=8010
1_MAIN_INTENT_BOT_PORT=8011
2Q_QUERY_SQL_GEN_BOT_PORT=8012
2X_MAIN_CTX_ROUTER_BOT_PORT=8013
2E_EVAL_EVALUATOR_BOT_PORT=8014
2C_CLARIFY_CLARIFY_BOT_PORT=8015
3Q_QUERY_RANKER_BOT_PORT=8016
4_MAIN_FORMATTER_PORT=8017

# Model Overrides (optional)
0_MAIN_REWRITE_BOT_MODEL=gpt-3.5-turbo
1_MAIN_INTENT_BOT_MODEL=gpt-4-turbo
2Q_QUERY_SQL_GEN_BOT_MODEL=gpt-4-turbo
2X_MAIN_CTX_ROUTER_BOT_MODEL=gpt-3.5-turbo
2E_EVAL_EVALUATOR_BOT_MODEL=gpt-4-turbo
2C_CLARIFY_CLARIFY_BOT_MODEL=gpt-3.5-turbo
3Q_QUERY_RANKER_BOT_MODEL=gpt-3.5-turbo

# Temperature Overrides (optional)
0_MAIN_REWRITE_BOT_TEMPERATURE=0.3
1_MAIN_INTENT_BOT_TEMPERATURE=0.2
2Q_QUERY_SQL_GEN_BOT_TEMPERATURE=0.1
2X_MAIN_CTX_ROUTER_BOT_TEMPERATURE=0.2
2E_EVAL_EVALUATOR_BOT_TEMPERATURE=0.3
2C_CLARIFY_CLARIFY_BOT_TEMPERATURE=0.5
3Q_QUERY_RANKER_BOT_TEMPERATURE=0.2

# Monitoring Configuration (optional)
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=15d

# Development Flags
NODE_ENV=development
DEBUG=false
METRICS_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Rate Limiting (requests per minute)
RATE_LIMIT_REWRITE=120
RATE_LIMIT_INTENT=60
RATE_LIMIT_SQL_GEN=30
RATE_LIMIT_CONTEXT=120
RATE_LIMIT_EVALUATOR=60
RATE_LIMIT_CLARIFY=60
RATE_LIMIT_RANKER=60
RATE_LIMIT_FORMATTER=120