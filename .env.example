# CECI-AI Environment Variables
# Copy this file to .env and update with your values

# Frontend
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key
VITE_API_URL=/api
# Show example queries on the sides of the chatbot (true/false)
VITE_SHOW_EXAMPLES=true
# Show macro view button in example queries panel (true/false)
VITE_SHOW_MACRO_BUTTON=false

# Backend
NODE_ENV=production
PORT=5173
OPENAI_API_KEY=sk-proj-your-key-here
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key
FRONTEND_URL=http://localhost

# SQL Engine
SQL_ENGINE_URL=http://sql-engine:8002
SQL_ENGINE_PERCENTAGE=100
USE_SUPABASE_RPC=true

# Redis
REDIS_URL=redis://redis:6379

# Domain Configuration (Required for HTTPS)
DOMAIN_NAME=your-domain.com

# Unified Architecture Feature Flags
USE_UNIFIED_INTENT=true
USE_LLM_FORMATTER=true
UNIFIED_INTENT_ROLLOUT_PERCENTAGE=100

# SSL Configuration
ADMIN_EMAIL=admin@your-domain.com

# Bot Service URLs (if using external services)
UNIFIED_INTENT_BOT_URL=http://unified-intent-bot:8011
LLM_FORMATTER_BOT_URL=http://formatter:8017
